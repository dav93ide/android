<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="321dp"
        android:layout_height="473dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/container_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/title_01"
            android:text="Layouts"
            android:theme="@style/titleStyle_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.052" />

        <TextView
            android:id="@+id/text"
            android:theme="@style/labelStyle_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layouts_spinner"
            android:layout_alignStart="@+id/layouts_spinner"
            android:layout_alignEnd="@+id/layouts_spinner"
            android:layout_marginBottom="-187dp"
            android:text="Selezionare un Layout:" />

        <Spinner
            android:id="@+id/layouts_spinner"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="206dp"
            android:background="@drawable/spinner_01"
            android:theme="@style/spinnerStyle_01" />

        <Button
            android:id="@+id/set"
            android:theme="@style/buttonStyle_01"
            android:background="@drawable/button_01"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="83dp"
            android:text="Start"
            android:onClick="startLayoutActivityClicked"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
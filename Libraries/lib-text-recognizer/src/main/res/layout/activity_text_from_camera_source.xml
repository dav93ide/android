    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <com.bodhitech.it.lib_text_recognizer.text_from_image.text_from_image.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bodhitech.it.lib_text_recognizer.text_from_image.text_from_image.camera.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.bodhitech.it.lib_text_recognizer.text_from_image.text_from_image.camera.CameraSourcePreview>

</LinearLayout>
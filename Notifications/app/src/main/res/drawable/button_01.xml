<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                />
            <stroke android:width="2dip" android:color="#00C" />
            <gradient android:angle="-90" android:startColor="#0CF" android:endColor="#FFF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
            />
            <stroke android:width="2dip" android:color="#00C" />
            <solid android:color="#0CF"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                />
            <stroke android:width="2dip" android:color="#0CF" />
            <gradient android:angle="-90" android:startColor="#00C" android:endColor="#000" />
        </shape>
    </item>
</selector>
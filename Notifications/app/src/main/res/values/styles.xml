<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="inputTextStyle_01">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="labelTextStyle_01">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#00C</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="buttonStyle_01">
        <item name="android:textColor">#000</item>
        <item name="android:background">#0CC</item>
        <item name="android:textAlignment">center</item>
        <item name="android:topLeftRadius">25dp</item>
        <item name="android:bottomRightRadius">25dp</item>
    </style>

</resources>
